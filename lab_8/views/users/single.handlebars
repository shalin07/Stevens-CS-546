<!DOCTYPE html>
<html lang="en">
  <head>
  <title>Person Found</title>
  <link rel="stylesheet" href="../public/site.css">
  </head>
  <body>
    <section>
      <h1>Person Found</h1>
      {{#each people}}  
       <h2>{{firstName}} {{lastName}}</h2>
        <main>
          <dl>
            <dt>ID</dt>
            <dd>{{id}}</dd>
            <dt>First Name</dt>
            <dd>{{firstName}}</dd>
            <dt>Last Name</dt>
            <dd>{{lastName}}</dd>
            <dt>Address</dt>
            <dd>{{address}}</dd>
            <dt>Zip Code</dt>
            <dd>{{zip}}</dd>
            <dt>Phone</dt>
            <dd>{{phone}}</dd>
            <dt>Social Security Number</dt>
            <dd>{{ssn}}</dd>
          </dl> 
          <p>{{body}}</p>
        </main>
      {{/each}}
    </section>
  </body>
 </html> 